<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">

    <Button
            android:id="@+id/button2"
            android:layout_width="143dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:onClick="logout"
            android:text="Cerrar Sesion"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="OnClick"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textColor="@android:color/holo_green_light" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageButton" app:layout_constraintVertical_bias="0.951"/>
    <Button
            android:text="Salir"
            android:layout_width="143dp"
            android:layout_height="45dp"
            android:id="@+id/button3" app:layout_constraintStart_toEndOf="@+id/button2" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.878"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp" android:onClick="salir"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:textColorLink="@android:color/holo_green_dark" android:textColor="@android:color/holo_green_light"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageButton2"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:layout_width="356dp"
            android:layout_height="195dp"
            android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Inverse" app:fontFamily="sans-serif"
            android:typeface="sans" android:textSize="18sp" android:lineSpacingExtra="8sp"
            android:textColor="@android:color/holo_orange_light" android:textAllCaps="true"
            android:textStyle="italic"
            android:text=" Crea tu propia lista de compras con fotos y geolocalizacion para compartir con amigos y familia lugares donde viste  ese producto que te ha llamado la atencion y anhelas coprarlo en el futuro"/>
    <ImageButton
            android:layout_width="159dp"
            android:layout_height="121dp" app:srcCompat="@drawable/camara"
            android:id="@+id/imageButton"
            android:cropToPadding="false" android:scaleType="centerCrop"
            style="@android:style/Widget.Holo.Light.ImageButton"
            android:background="@drawable/com_facebook_auth_dialog_cancel_background"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toStartOf="@+id/imageButton2"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <ImageButton
            android:layout_width="159dp"
            android:layout_height="121dp" app:srcCompat="@drawable/galeria"
            android:id="@+id/imageButton2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:scaleType="centerCrop"
            style="@android:style/Widget.Holo.ImageButton"
            android:background="@drawable/com_facebook_auth_dialog_cancel_background"/>

</android.support.constraint.ConstraintLayout>